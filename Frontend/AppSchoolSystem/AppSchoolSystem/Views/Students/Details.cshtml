@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-8">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Form Create New Students</h3>
        </div><!-- /.box-header -->
            <div class="box-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">NIS</label>
                        <input type="text" id="nis" name="nis" placeholder="Enter NIS" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nama</label>
                        <input type="text" id="nama" name="nama" placeholder="Enter your full name" disabled="disabled"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kelas</label>
                        <input type="text" id="kelas" name="kelas" placeholder="Enter Kelas" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Jenis Kelamin</label>
                        <input type="text" id="jk" name="jk" placeholder="Enter your JK"  disabled="disabled"/>
                    </div>
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-block btn-info btn-sm col-md-8", @style = "width: 78px" })
                    @Html.ActionLink("Edit", "Index", null, new { @class = "btn btn-block btn-info btn-sm col-md-8", @style = "width: 78px" })
                    @Html.ActionLink("Delete", "Index", null, new { @class = "btn btn-block btn-info btn-sm col-md-8", @style = "width: 78px" })
                </div>
        </div>
    </div><!-- /.box -->
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
